  for(zarAt=1; zarAt<=6000; zarAt++)
  {
    yuz = (rand()%6) +1;
    ++frekans[yuz];
  }
      printf( "%s%17s\n", "YÃ¼z", "Frekans" );
   
   for(yuz=1; yuz<=Boyut-1; yuz++)
